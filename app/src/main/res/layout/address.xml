<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".LoadAddress">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/r1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_outline_black_back_"
            android:id="@+id/back"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textaddress"
            android:text="Address"
            android:textColor="@color/black"
            android:textSize="25dp"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/black"
        android:layout_below="@+id/r1">

        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/reAddress"
            android:layout_marginTop="10dp">
        </androidx.recyclerview.widget.RecyclerView>

        <ImageView
            android:layout_width="200dp"
            android:layout_height="150dp"
            android:id="@+id/addimg"
            android:src="@drawable/ic_outline_add_location"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="200dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textAdd"
            android:text="Add Your Address Now..."
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_below="@+id/addimg"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"/>

        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/addAddress"
            android:src="@drawable/ic_outline_white_add_circle"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>
    </RelativeLayout>
</RelativeLayout>