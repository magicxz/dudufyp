<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="10dp"
    app:cardCornerRadius="5dp"
    app:cardBackgroundColor="@color/black">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rela1">

        <ImageView
            android:layout_width="50dp"
            android:layout_height="70dp"
            android:id="@+id/img"
            android:src="@drawable/ic_outline_red_home"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="TITLE"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="22dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/editAddress"
            android:src="@drawable/ic_outline_red_edit"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="5dp"/>

        <ImageView
            android:layout_width="50dp"
            android:layout_height="60dp"
            android:id="@+id/deleteAddress"
            android:src="@drawable/ic_outline_red_delete"
            android:layout_marginLeft="250dp"
            android:layout_marginTop="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/streeNo"
            android:text="Kampus Utama,"
            android:textColor="@color/white"
            android:layout_below="@+id/editAddress"
            android:layout_marginLeft="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/streetName"
            android:text="Jalan Genting Kelang"
            android:textColor="@color/white"
            android:layout_below="@+id/editAddress"
            android:textAlignment="viewEnd"
            android:gravity="end"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>