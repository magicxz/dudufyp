<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/commUser"
        android:src="@drawable/profile"
        android:layout_marginTop="10dp"
        app:civ_border_width="0.5dp"
        android:layout_marginLeft="5dp"
        app:civ_border_color="@color/white"/>

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/card"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="@color/light_grey"
        android:layout_toRightOf="@+id/commUser"
        app:contentPaddingLeft="15dp"
        app:contentPaddingRight="15dp"
        app:contentPaddingTop="5dp"
        app:contentPaddingBottom="5dp"
        android:layout_marginBottom="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commName"
                android:text="Username"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commDate"
                android:text="2020-20-20"
                android:textSize="10dp"
                android:textColor="@color/black"
                android:layout_below="@+id/commName"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/commContent"
                android:text="hi i am bobo"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:layout_below="@+id/commDate"
                android:layout_marginTop="5dp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>