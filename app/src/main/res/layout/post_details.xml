<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".PostDetails">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/r1">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_outline_black_back_"
            android:id="@+id/back1"
            android:layout_marginTop="14dp"
            android:layout_marginLeft="5dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/dimgrey"
        android:layout_below="@+id/r1"
        android:layout_marginBottom="10dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/userImg1"
            android:src="@drawable/profile"
            app:civ_border_width="0.5dp"
            app:civ_border_color="@color/white"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="15dp">
        </de.hdodenhof.circleimageview.CircleImageView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name1"
            android:text="Example"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="30dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/datetime1"
            android:text="2020-02-20"
            android:textColor="@color/white"
            android:layout_marginLeft="90dp"
            android:layout_marginTop="3dp"
            android:layout_below="@+id/name1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/content1"
            android:text="abcdefg"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_below="@+id/datetime1"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:id="@+id/picture1"
            android:src="@drawable/ic_outline_white_photo"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_marginTop="20dp"
            android:adjustViewBounds="true"
            android:layout_below="@+id/content1"
            android:scaleType="fitXY"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/likeCount1"
            android:text=" Be the first to like this"
            android:textColor="@color/white"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="15dp"
            android:textSize="15dp"
            android:drawableLeft="@drawable/ic_003_heart_clicked"
            android:layout_below="@+id/picture1"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/commentCount1"
            android:text="no comment..."
            android:textColor="@color/white"
            android:layout_toRightOf="@+id/likeCount1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="25dp"
            android:textSize="15dp"
            android:layout_below="@+id/picture1"/>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:id="@+id/imgView_line1"
            android:background="@color/white"
            android:layout_below="@+id/likeCount1"
            android:layout_marginTop="9dp"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relative"
            android:layout_below="@+id/imgView_line1">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/comment1"
                android:text="  Comment"
                android:textColor="@color/white"
                android:textSize="15dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="25dp"
                android:layout_toRightOf="@+id/relative1"
                android:drawableLeft="@drawable/ic_001_comment_white_oval_bubble"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/relative1"
                android:layout_marginBottom="10dp">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/love1"
                    android:src="@drawable/ic_002_heart"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/txtlike"
                    android:text="  Like"
                    android:layout_toRightOf="@+id/love1"
                    android:textColor="@color/white"
                    android:layout_marginTop="10dp"
                    android:textSize="15dp" />
            </RelativeLayout>
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>