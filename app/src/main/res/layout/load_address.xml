<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    android:paddingBottom="10dp">

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/img1"
        android:background="@drawable/ic_outline_home"
        android:layout_marginTop="10dp"/>
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addressType"
        android:text="Home"
        android:textSize="25dp"
        android:textColor="@color/white"
        android:layout_toRightOf="@+id/img1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/deleteAddress"
        android:background="@drawable/ic_outline_red_delete"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"/>

    <ImageView
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:id="@+id/editAddress"
        android:background="@drawable/ic_outline_edit_location"
        android:layout_toLeftOf="@+id/deleteAddress"
        android:layout_marginRight="10dp"
        android:layout_marginTop="2dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addressline"
        android:text="20, jalan keembong 47 "
        android:textColor="@color/light_grey"
        android:textSize="15dp"
        android:layout_below="@+id/addressType"
        android:layout_toRightOf="@+id/img1"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/addressline2"
        android:text="Taman johor jaya"
        android:textColor="@color/light_grey"
        android:layout_below="@+id/addressline"
        android:layout_toRightOf="@+id/img1"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/postcode"
        android:text="53300"
        android:textColor="@color/light_grey"
        android:layout_below="@+id/addressline2"
        android:layout_toRightOf="@+id/img1"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/city"
        android:text="Johor Bahru"
        android:textColor="@color/light_grey"
        android:layout_toRightOf="@+id/postcode"
        android:layout_below="@+id/addressline2"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/state"
        android:text="Johor"
        android:textColor="@color/light_grey"
        android:layout_toRightOf="@+id/img1"
        android:layout_below="@+id/postcode"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:id="@+id/imgView_line"
        android:background="@color/light_grey"
        android:layout_below="@+id/postcode"
        android:layout_marginTop="30dp" />

</RelativeLayout>